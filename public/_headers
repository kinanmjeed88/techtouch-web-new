# Always check for the newest version of the main HTML file
/index.html
  Cache-Control: no-cache

# Let the browser cache assets like CSS, JS, and images,
# but it must revalidate them with the server before using them.
/assets/*
  Cache-Control: public, max-age=0, must-revalidate

# Cache fonts and images for a long time as they rarely change.
/images/*
  Cache-Control: public, max-age=31536000, immutable
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
